@model IEnumerable<ProyectoRH.Models.Empleados>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>

    @Html.ActionLink("Creates New", "Create")
</p>
<form action="Index" method="post">
    Find by name: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</form>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargos.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargos.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CodigoEmpleado }) |
                @Html.ActionLink("Details", "Details", new { id = item.CodigoEmpleado }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CodigoEmpleado })
            </td>
        </tr>
    }

</table>


